
<% layout('layouts/boilerplate') %> 

<h2>All Listings</h2>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% allListings.forEach(function(listing) { %>
    <div class="card col listing-card" style="cursor: pointer;" onclick="window.location.href='/listings/<%= listing._id %>'">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; display: block;">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br>
          â‚¹<%= listing.price %> /night
        </p>
      </div>
    </div>
  <% }); %>
</div>





