
<% layout('layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup On Wanterlust</h1>
    <div class="col-8 offset-2">
<form action="/signup" method="POST" class="needs-validation" novalidate>

    <div class="form-floating mb-3 col-8 offset-2 mt-3">
    <input name="username" class="form-control" id="username" required>
    <label for="username">Username</label>
  </div>

  <div class="form-floating mb-3 col-8 offset-2">
    <input name="email" class="form-control" id="email" type="email" placeholder="name@example.com" required>
    <label for="email">Email address</label>
  </div>

  <div class="form-floating mb-3 col-8 offset-2">
    <input name="password" class="form-control" id="password" type="password" placeholder="Password" required>
    <label for="password">Password</label>
  </div>
  
  <button type="submit" class="btn btn-success mt-3 offset-2">Signup</button>

</form>
    </div>
 </div>